
@model ogrencievin.Models.ViewModelEstate
@{
    ViewData["Title"] = "Giris Yap";
}
<style>
    .transform-center
    {
        transform: translateX(150%);
    }
</style>
<style>
    .profile-head {
    transform: translateY(2rem)
}

.cover {
    background-image: url(https://images.unsplash.com/photo-1530305408560-82d13781b33a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80);
    background-size: cover;
    background-repeat: no-repeat
}

body {
  
    background-image: url("/Images/pexels-binyamin-mellish-106399.jpg");
   background-size:     cover;                      /* <------ */
   background-repeat:   no-repeat;
   background-position: center center;   
   height: 960px;
    min-height: 100vh;
    overflow-x:hidden;
}
</style>
<div class="row py-2 px-2">
  <div class="col-md-8 mx-auto">
    <div class="bg-white shadow rounded overflow-hidden">
      <div class="px-4 pt-0 pb-4 cover">
        <div class="media align-items-end profile-head">
          <div class="media-body mb-5 text-white">
            <h4 class="mt-0 mb-0">@ViewData["Username"]</h4>
            <a class="text-white" href="/Home/Index">Ana Sayfaya Don</a>
          </div>
        </div>
      </div>
              <div class="position-absolute` ml-auto mr-auto w-25 transform-center">
                @using (Html.BeginForm(FormMethod.Post,new {enctype = "multipart/form-data"}))
                {  
                  <div class="form-outline mb-4">
                    <label class="form-label" for="">Baslik</label>
                    @Html.TextBoxFor(estate => estate.title,null,new {@class="form-control"})
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="">Aciklama</label>
                    @Html.TextAreaFor(estate => estate.description,new {@class="form-control"})
                  </div>

                  <div class="form-outline mb-4">
                    @Html.TextBoxFor(estate => estate.rooms,null,new {@class="form-control"})
                    <label class="form-label" for="">Oda Sayisi</label>
                  </div>


                  <!-- Submit button -->
                  @Html.TextBoxFor(estate => estate.image, new {type = "file",@multiple = "multiple"})
                  @Html.TextAreaFor(estate => estate.address,new {@placeholder ="il ilce mahalle sokak"})
                  <button type="submit" class="btn btn-primary btn-block mb-5">Send</button>
                }
              </div>
            </div>
  </div>
    </div>
</div>