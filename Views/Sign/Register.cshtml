@model ogrencievin.Models.Entities.User
@{
    ViewData["Title"] = "Giris Yap";
    ViewData["Navbar"] = false;
}
<style>
    body{background: #000}.card{border: none;height: fit-content}.forms-inputs{position: relative}.forms-inputs span{position: absolute;top:-18px;left: 10px;background-color: #fff;padding: 5px 10px;font-size: 15px}.forms-inputs input{height: 50px;border: 2px solid #eee}.forms-inputs input:focus{box-shadow: none;outline: none;border: 2px solid #000}.btn{height: 50px}.success-data{display: flex;flex-direction: column}.bxs-badge-check{font-size: 90px}
</style>
<style>
    html,body{
        margin:0px;
        padding:0px;
        max-width: 100%;
    }
    section{
      background-image: url("/Images/pexels-binyamin-mellish-106399.jpg");
        background-size:     cover;                      /* <------ */
        background-repeat:   no-repeat;
        background-position: center center;   
        height: 100%;
        margin:0;
        padding:0;
        position:absolute;
        width: 100%;
    }
    .container-fluid{
        margin:0;
        padding:0;
    }
</style>
<style href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"></style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
<section>
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card px-5 py-5" id="form1">
                <div class="form-data" v-if="!submitted">
                    @using (Html.BeginForm(FormMethod.Post)){
                    <div class="forms-inputs mb-4"> <span>Kullanici Adi</span> 
                        @Html.TextBoxFor(u => u.UserName,null ,new {@class="w-100"}) 
                    </div>
                    <div class="forms-inputs mb-4"> <span>Telefon Numarasi</span> 
                        @Html.TextBoxFor(u => u.PhoneNumber,null ,new {@class="w-100", @pattern="[0-9]{3}[0-9]{3}[0-9]{4}", @type="tel"}) 
                    </div>
                    <div class="forms-inputs mb-4"> <span>Sifre</span> 
                        @Html.PasswordFor(u => u.PasswordHash, new {@class="w-100"})
                    </div>
                    <div class="validation">
                        @Html.ValidationSummary()
                     </div>
                    <div class="mb-3"> <input type="submit" value="Giris Yap"></div>
                    
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</section>